#!/bin/bash

set -euo pipefail

fedora_packages=(
    com.github.tchx84.Flatseal
    org.gnome.Shotwell
)

flathub_packages=(
    com.google.Chrome
    com.obsproject.Studio
    com.vscodium.codium
    io.mpv.Mpv
    org.gnome.Snapshot
    org.mozilla.firefox
)

set -x

flatpak install -y fedora "${fedora_packages[@]}"

flatpak install -y flathub "${flathub_packages[@]}"
