#!/bin/bash

set -euo pipefail

cname=gui
run="toolbox run --container $cname"

scripts_dir=$(readlink -e toolbox-gui.d)
run_scripts_from=$(which ./run-scripts-from)

packages=(
  fzf
  xdg-user-dirs

  # sway things:
  # wdisplays needs libGLESv2 which in fedora is found in libglvnd-gles:
  wdisplays libglvnd-gles wf-recorder

  # misc things:
  pavucontrol gkrellm zenity obs-studio
)


function create_toolbox {
  (
    set -x
    toolbox create $cname 2>/dev/null
    # $run sudo dnf install -y "${dependencies[@]}"
  ) || true
}

create_toolbox

set -x

$run sudo dnf install -y "${packages[@]}"

$run "$run_scripts_from" "$scripts_dir"
