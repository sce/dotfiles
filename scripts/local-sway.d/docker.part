#!/bin/bash

set -euo pipefail

packages+=(
    containerd.io
    docker-buildx-plugin
    docker-ce
    docker-ce-cli
    docker-compose-plugin
)

repo_filename="docker-ce.repo"
repo_url="https://download.docker.com/linux/fedora/docker-ce.repo"

sudo curl -sL -o "/etc/yum.repos.d/$repo_filename" "$repo_url"
